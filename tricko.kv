#:import QRCodeWidget kivy.garden.qrcode
<RootLayout>:
    orientation: "horizontal"
    currentNumberText: app.currentNumber
    BoxLayout:
        orientation: "vertical"
        Label:
            text: "Number of tickets distributed"
        Label:
            id: labelCount
            text: str(app.count)
            color: app.color["text"]
            font_size: 50
            size_hint: 1, 1.75
        Button:
            id: buttonSend
            text: str(app.config["options"]["send"])
            color: app.color["text"]
            on_press: app.clickSend()
        Button:
            id: buttonReceipt
            text: str(app.config["options"]["receipt"])
            color: app.color["text"]
            on_press: app.clickReceipt()
        Button:
            id: buttonInfo
            text: str(app.config["options"]["info"])
            color: app.color["text"]
            on_press: app.clickInfo()
        Label:
            id: labelNextNumber
            text: "Next number"
        BoxLayout:
            orientation: "horizontal"
            Label:
                id: labelNextNumberSend
                text: str(app.nextNumberSend)
                color: app.color["text"]
                font_size: 50
                size_hint: 1, 1.75
            Label:
                id: labelNextNumberReceipt
                text: str(app.nextNumberReceipt)
                color: app.color["text"]
                font_size: 50
                size_hint: 1, 1.75
            Label:
                id: labelNextNumberInfo
                text: str(app.nextNumberInfo)
                color: app.color["text"]
                font_size: 50
                size_hint: 1, 1.75
    BoxLayout:
        orientation: "vertical"
        Label:
            id: "labelCurrentNumberInfo"
            text: "Your number is"
            size_hint: 1, 0.5
        Label:
            id: "labelCurrentNumber"
            text: str(app.currentNumber)
            font_size: 50
        QRCodeWidget:
            id: "qrNumber"
            data: app.currentNumber
            show_border: False
            background_color: app.color["qrBackground"]
        Label:
            id: "labelInstructions"
            text: "Scan this QR code or take a photograph of it"
            size_hint: 1, 0.7