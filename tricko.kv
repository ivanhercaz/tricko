<RootLayout>:
    orientation: "horizontal"
    BoxLayout:
        orientation: "vertical"
        Label:
            text: "Number of tickets distributed"
        Label:
            id: labelCount
            text: str(app.count)
            color: app.color["text"]
            font_size: 50
            size_hint: 1, 1.75
        Button:
            id: buttonSend
            text: str(app.config["options"]["send"])
            color: app.color["text"]
        Button:
            id: buttonReceipt
            text: str(app.config["options"]["receipt"])
            color: app.color["text"]
        Button:
            id: buttonInfo
            text: str(app.config["options"]["info"])
            color: app.color["text"]
        Label:
            id: labelNextNumber
            text: "Next number"
        BoxLayout:
            orientation: "horizontal"
            Label:
                id: labelNextNumberSend
                text: app.config["options"]["send_code"] + str(app.nextNumberSend)
                color: app.color["text"]
                font_size: 50
                size_hint: 1, 1.75
            Label:
                id: labelNextNumberReceipt
                text: app.config["options"]["receipt_code"] + str(app.nextNumberReceipt)
                color: app.color["text"]
                font_size: 50
                size_hint: 1, 1.75
            Label:
                id: labelNextNumberInfo
                text: app.config["options"]["info_code"] + str(app.nextNumberInfo)
                color: app.color["text"]
                font_size: 50
                size_hint: 1, 1.75