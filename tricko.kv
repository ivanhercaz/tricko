#:import QRCodeWidget kivy.garden.qrcode

<TwoOptionsLayout@BaseLayout>:
    BoxLayout:
        orientation: "vertical"
        Label:
            text: "Number of tickets distributed"
        BigLabel:
            id: labelCount
            text: str(app.count)
        OptionButton:
            id: buttonSend
            text: str(app.config["options"]["option_a"]["name"])
            on_press: app.clickSend()
        OptionButton:
            id: buttonReceipt
            text: str(app.config["options"]["option_b"]["name"])
            on_press: app.clickReceipt()
        Label:
            id: labelNextNumber
            text: "Next number"
        BoxLayout:
            orientation: "horizontal"
            BigLabel:
                id: labelNextNumberSend
                text: str(app.nextNumberSend)
            BigLabel:
                id: labelNextNumberInfo
                text: str(app.nextNumberInfo)
    QRWidget

<ThreeOptionsLayout@BaseLayout>:
    BoxLayout:
        orientation: "vertical"
        Label:
            text: "Number of tickets distributed"
        BigLabel:
            id: labelCount
            text: str(app.count)
        OptionButton:
            id: buttonSend
            text: str(app.config["options"]["option_a"]["name"])
            on_press: app.clickSend()
        OptionButton:
            id: buttonReceipt
            text: str(app.config["options"]["option_b"]["name"])
            on_press: app.clickReceipt()
        OptionButton:
            id: buttonInfo
            text: str(app.config["options"]["option_c"]["name"])
            on_press: app.clickInfo()
        Label:
            id: labelNextNumber
            text: "Next number"
        BoxLayout:
            orientation: "horizontal"
            BigLabel:
                id: labelNextNumberSend
                text: str(app.nextNumberSend)
            BigLabel:
                id: labelNextNumberReceipt
                text: str(app.nextNumberReceipt)
            BigLabel:
                id: labelNextNumberInfo
                text: str(app.nextNumberInfo)
    QRWidget

<BaseLayout>:
    orientation: "horizontal"
    currentNumberText: app.currentNumber

<OptionButton@Button>:
    color: app.color["text"]
    font_size: 20

<BigLabel@Label>:
    color: app.color["text"]
    font_size: 50
    size_hint: 1, 1.75

<QRWidget@BoxLayout>:
    orientation: "vertical"
    Label:
        id: "labelCurrentNumberInfo"
        text: "Your number is"
        size_hint: 1, 0.5
    Label:
        id: "labelCurrentNumber"
        text: str(app.currentNumber)
        font_size: 50
    QRCodeWidget:
        id: "qrNumber"
        data: app.currentNumber
        show_border: False
        background_color: app.color["qrBackground"]
    Label:
        id: "labelInstructions"
        text: "Scan this QR code or take a photograph of it"
        size_hint: 1, 0.7