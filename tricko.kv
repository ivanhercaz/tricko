#:import QRCodeWidget kivy.garden.qrcode

<TwoOptionsLayout@BaseLayout>:
    BoxLayout:
        orientation: "vertical"
        Label:
            text: "Number of tickets distributed"
        BigLabel:
            id: labelCount
            text: str(app.count)
        OptionButton:
            id: buttonSend
            text: str(app.config["options"]["option_a"]["name"])
            on_press: app.click_option_a()
        OptionButton:
            id: buttonReceipt
            text: str(app.config["options"]["option_b"]["name"])
            on_press: app.click_option_b()
        Label:
            id: labelNextNumber
            text: "Next number"
        BoxLayout:
            orientation: "horizontal"
            BigLabel:
                id: labelNextNumberSend
                text: str(app.nextOptionA)
            BigLabel:
                id: labelNextNumberInfo
                text: str(app.nextOptionB)
    QRWidget

<ThreeOptionsLayout@BaseLayout>:
    BoxLayout:
        orientation: "vertical"
        Label:
            text: "Number of tickets distributed"
        BigLabel:
            id: labelCount
            text: str(app.count)
        OptionButton:
            id: buttonSend
            text: str(app.config["options"]["option_a"]["name"])
            on_press: app.click_option_a()
        OptionButton:
            id: buttonReceipt
            text: str(app.config["options"]["option_b"]["name"])
            on_press: app.click_option_b()
        OptionButton:
            id: buttonInfo
            text: str(app.config["options"]["option_c"]["name"])
            on_press: app.click_option_c()
        Label:
            id: labelNextNumber
            text: "Next number"
        BoxLayout:
            orientation: "horizontal"
            BigLabel:
                id: labelNextNumberSend
                text: str(app.nextOptionA)
            BigLabel:
                id: labelNextNumberReceipt
                text: str(app.nextOptionB)
            BigLabel:
                id: labelNextNumberInfo
                text: str(app.nextOptionC)
    QRWidget

<BaseLayout>:
    orientation: "horizontal"
    currentNumberText: app.currentNumber


<QRWidget@BoxLayout>:
    orientation: "vertical"
    Label:
        id: "labelCurrentNumberInfo"
        text: "Your number is"
        size_hint: 1, 0.5
    BigLabel:
        id: "labelCurrentNumber"
        text: str(app.currentNumber)
        font_size: 50
    QRCodeWidget:
        id: "qrNumber"
        data: app.currentNumber
        show_border: False
        background_color: app.color["qrBackground"]
    Label:
        id: "labelInstructions"
        text: "Scan this QR code or take a photograph of it"
        size_hint: 1, 0.7

<OptionButton@Button>:
    color: app.color["text"]
    font_size: 20

<BigLabel@Label>:
    color: app.color["text"]
    font_size: 50
    size_hint: 1, 1.75